{
  "name": "news-wrapper",
  "version": "1.0.5",
  "description": "[WIP] A Javascript library to work with API news",
  "main": "index.js",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "build-url": "^1.0.10",
    "ms": "^2.1.1",
    "path": "^0.12.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "chai": "^4.1.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jsdom": "^11.5.1",
    "mocha": "^4.0.1",
    "moxios": "^0.4.0",
    "react-addons-test-utils": "^15.6.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename news-wrapper.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename news-wrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "dev:hot": "webpack-dev-server --hot --inline --progress --colors --watch",
    "test": "mocha tests/**/*.spec.js --require babel-register --watch"
  },
  "files": [
    "dist",
    "lib"
  ],
  "engines": {
    "node": ">=8.9.3"
  },
  "author": "Eduardo Silva <eduardo305@gmail.com>",
  "license": "ISC",
  "keywords": [
    "TDD",
    "js",
    "library",
    "NewsAPI"
  ]
}
